<view class="container"><block a:if="{{productListIncart.length}}"><view><view class="list"><block a:for="{{productListIncart}}" a:for-item="item" a:for-index="idx" a:key="idx"><view class="item"><view class="img"><image class="icon" src="{{item.imgUrl}}" mode="aspectFit"></image></view><view class="describe"><view class="text">{{item.text}}</view><view class="append">{{item.append}}</view><view class="discount-price">{{"¥"+item.discountPrice}}</view><view class="origin-price">{{"¥"+item.originalPrice}}</view><view class="counter"><view class="minus">-</view><view class="count">{{productListMapIncart[item.id]}}</view><view class="plus">+</view></view></view></view></block></view></view></block><block a:else><view class="no-product">空空如也~快去挑选你的商品吧~</view></block></view>